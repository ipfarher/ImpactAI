#:import Toolbar kivymd.toolbar.Toolbar
#:import MDNavigationDrawer kivymd.navigationdrawer.MDNavigationDrawer
#:import NavigationLayout kivymd.navigationdrawer.NavigationLayout
#:import NavigationDrawerToolbar kivymd.navigationdrawer.NavigationDrawerToolbar
#:import MDTabbedPanel kivymd.tabs.MDTabbedPanel
#:import MDTab kivymd.tabs.MDTab
#:import MDList kivymd.list.MDList
#:import MDSpinner kivymd.spinner.MDSpinner
#:import ThreeLineListItem kivymd.list.ThreeLineListItem
#:import ut utils
#:import AboutScreen screens
#:import StartScreen screens
#:import HistoryScreen screens
#:import SponsorsScreen screens

NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: 'Menu'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'About'
            on_release: app.root.ids.scr_mngr.current = 'about'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Start'
            on_release: app.root.ids.scr_mngr.current = 'Start'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'History'
            on_release: app.root.ids.scr_mngr.current = 'History'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Companies'
            on_release: app.root.ids.scr_mngr.current = 'sponsors'

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Impact AI'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
        ScreenManager:
            id: scr_mngr
            AboutScreen:
            StartScreen:
            HistoryScreen:
            SponsorsScreen:
